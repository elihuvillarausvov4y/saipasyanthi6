{
    "name": "xmake-vscode",
    "displayName": "XMake",
    "description": "Extended XMake support in Visual Studio Code",
    "version": "0.0.5",
    "publisher": "tboox",
    "icon": "res/logo256.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/tboox/xmake-vscode"
    },
    "bugs": {
        "url": "https://github.com/tboox/xmake-vscode/issues"
    },
    "homepage": "https://github.com/tboox/xmake-vscode",
    "keywords": [
        "xmake",
        "build",
        "c++",
        "native",
        "lua"
    ],
    "engines": {
        "vscode": "^1.12.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:xmake.build"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "xmake.build",
                "title": "Build",
                "category": "XMake"
            }
        ]
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}