{
    "name": "xmake-vscode",
    "displayName": "XMake",
    "description": "Extended XMake support in Visual Studio Code",
    "version": "0.0.8",
    "publisher": "tboox",
    "icon": "res/logo256.png",
    "repository": {
        "type": "git",
        "url": "https://github.com/tboox/xmake-vscode"
    },
    "bugs": {
        "url": "https://github.com/tboox/xmake-vscode/issues"
    },
    "homepage": "https://github.com/tboox/xmake-vscode",
    "keywords": [
        "xmake",
        "build",
        "c++",
        "native",
        "lua"
    ],
    "engines": {
        "vscode": "^1.16.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:xmake.onConfigure",
        "onCommand:xmake.onBuild",
        "onCommand:xmake.onRebuild",
        "onCommand:xmake.onClean",
        "onCommand:xmake.onCleanAll",
        "onCommand:xmake.onRun",
        "onCommand:xmake.onPackage"
    ],
    "main": "./out/src/extension",
    "contributes": {
        "commands": [
            {
                "command": "xmake.onConfigure",
                "title": "Configure",
                "category": "XMake"
            },
            {
                "command": "xmake.onBuild",
                "title": "Build",
                "category": "XMake"
            },
            {
                "command": "xmake.onRebuild",
                "title": "Rebuild",
                "category": "XMake"
            },
            {
                "command": "xmake.onClean",
                "title": "Clean",
                "category": "XMake"
            },
            {
                "command": "xmake.onCleanAll",
                "title": "CleanAll",
                "category": "XMake"
            },
            {
                "command": "xmake.onRun",
                "title": "Run",
                "category": "XMake"
            },
            {
                "command": "xmake.onPackage",
                "title": "Package",
                "category": "XMake"
            }
        ],
        "menus": {
            "commandPalette": [
                {
                    "command": "xmake.onConfigure"
                },
                {
                    "command": "xmake.onBuild"
                },
                {
                    "command": "xmake.onRebuild"
                },
                {
                    "command": "xmake.onClean"
                },
                {
                    "command": "xmake.onCleanAll"
                },
                {
                    "command": "xmake.onRun"
                },
                {
                    "command": "xmake.onPackage"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "XMake configuration",
            "properties": {
                "xmake.logLevel": {
                    "type": "string",
                    "default": "normal",
                    "description": "the log level: normal/verbose/minimal",
                    "enum": [
                        "verbose",
                        "normal",
                        "minimal"
                    ]
                },
                "xmake.workingDirectory": {
                    "type": "string",
                    "default": "${workspaceRoot}",
                    "description": "the working directory with the root xmake.lua"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.5.2",
        "vscode": "^1.1.5",
        "mocha": "^3.5.0",
        "@types/node": "^7.0.43",
        "@types/mocha": "^2.2.42"
    }
}